/*
                                 =============================================================
                                        Create Databases and Tables (Fresher Friendly)
								                 =============================================================
Script Purpose:
    This script sets up a simple Data Warehouse structure with three databases/schemas:
        - bronze : raw data
        - silver : cleaned data
        - gold   : analytics/reporting
    It also creates basic tables for CRM and ERP data in the bronze schema.
    
Usage Note:
    Make sure these databases exist or uncomment CREATE DATABASE statements. 
    Truncate statements are used to clear old data before creating tables.
*/

create schema bronze;
create schema silver;
create schema gold;

                                            -- CRM CUSTOMER INFO --
Truncate table bronze.crm_cust_info;
CREATE TABLE bronze.crm_cust_info (
    cst_id             INT,
    cst_key            VARCHAR(50),
    cst_firstname      VARCHAR(50),
    cst_lastname       VARCHAR(50),
    cst_marital_status VARCHAR(50),
    cst_gndr           VARCHAR(50),
    cst_create_date    DATE
);

											-- CRM PRODUCT INFO --
Truncate table bronze.crm_prd_info;
CREATE TABLE bronze.crm_prd_info (
    prd_id       INT,
    prd_key      VARCHAR(50),
    prd_nm       VARCHAR(50),
    prd_cost     INT,
    prd_line     VARCHAR(50),
    prd_start_dt DATETIME,
    prd_end_dt   DATETIME
);

											 -- CRM SALES DETAILS --

Truncate table bronze.crm_sales_details;
CREATE TABLE bronze.crm_sales_details (
    sls_ord_num  VARCHAR(50),
    sls_prd_key  VARCHAR(50),
    sls_cust_id  INT,
    sls_order_dt INT,
    sls_ship_dt  INT,
    sls_due_dt   INT,
    sls_sales    INT,
    sls_quantity INT,
    sls_price    INT
);

												 -- ERP LOCATION --
Truncate table bronze.erp_loca_a101;
CREATE TABLE bronze.erp_loc_a101 (
    cid   VARCHAR(50),
    cntry VARCHAR(50)
);

                                                  -- ERP CUSTOMER --
Truncate table bronze.erp_cust_az12;
CREATE TABLE bronze.erp_cust_az12 (
    cid   VARCHAR(50),
    bdate DATE,
    gen   VARCHAR(50)
);

                                                 -- ERP PRODUCT CATEGORY --
Truncate table bronze.erp_px_cat_g1v2;
CREATE TABLE bronze.erp_px_cat_g1v2 (
    id          VARCHAR(50),
    cat         VARCHAR(50),
    subcat      VARCHAR(50),
    maintenance VARCHAR(50)
);
